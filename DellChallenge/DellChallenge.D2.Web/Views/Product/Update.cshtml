@model DellChallenge.D2.Web.Models.ProductModel

@{
    ViewData["Title"] = "Update";
}

<script type="text/javascript">
    function Validate() {
        if (!checkName()) {
            event.preventDefault()
            document.getElementById("name-mandatory").style.display = "block";
        }
        else {
            document.getElementById("name-mandatory").style.display = "none";
        }
    }

    function checkName() {
        if ($.trim($('#Name').val()) != "")
            return true;
        else
            return false;
    }

</script>

<h1>Update</h1>

<h4>ProductModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <span class="badge badge-danger" id="name-mandatory" style="display:none">Name is mandatory</span>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="submit" value="Update" class="btn btn-primary" onclick="Validate()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

